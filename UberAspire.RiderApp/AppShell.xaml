    xmlns:local="clr-namespace:UberAspire.RiderApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="UberAspire">
    <TabBar>       
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
